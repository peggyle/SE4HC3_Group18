<Page x:Class="HC3_A2.Success"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HC3_A2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page11">

    <Grid>
        <TextBlock x:Name="successLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Action completed successfully"  Margin="0,50,0,0" FontSize="30" FontFamily="Arial" FontWeight="Bold"/>

        <Button x:Name="printButton" Content="Print&#xD;&#xA;Receipt" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,50,50" Width="200" Height="100" Click="print_click" FontSize="30" FontFamily="Arial"/>

        <Button x:Name="moreButton" Content="More&#xD;&#xA;Transactions" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,50" Width="200" Height="100" Click="more_click" FontSize="30" FontFamily="Arial"/>
        <Button x:Name="finishButton" Content="Finish&#xD;&#xA;Banking" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,50" Width="200" Height="100" Click="logout_click" FontSize="30" FontFamily="Arial"/>

    </Grid>
</Page>
