<Page x:Class="HC3_A2.CheckAccount2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HC3_A2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Rectangle Fill="#83002B" HorizontalAlignment="Center" Height="90" VerticalAlignment="Top" Width="800"/>
        <TextBlock x:Name="perkxLabel" HorizontalAlignment="Right" VerticalAlignment="Top" Text="PErKX"  Margin="0,5,15,0" FontSize="50" FontFamily="Arial" FontWeight="Bold" Foreground="White"/>
        <TextBlock x:Name="bankingLabel" HorizontalAlignment="Right" VerticalAlignment="Top" Text="Banking"  Margin="0,55,15,0" FontSize="20" FontFamily="Arial" FontWeight="Bold" Foreground="White"/>
        <TextBlock x:Name="titleLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Check Account Statements"  Margin="15,15,0,0" FontSize="45" FontFamily="Arial" Foreground="White"/>

        <TextBlock x:Name="textLabel" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,110,0,0" FontSize="30" FontFamily="Arial" FontWeight="Bold" Text="Account - Balance"/>
        
        <!--
        <Label x:Name="lable1" Content="Account:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0" FontSize="30" FontFamily="Arial"/>
        <TextBox x:Name="textBox" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Margin="60,95,0,0" Text="Account X" Width="497" FontSize="30" VerticalContentAlignment="Center"/>
        <Label x:Name="label" Content="Balance:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,160,0,0" FontSize="30" FontFamily="Arial"/>
