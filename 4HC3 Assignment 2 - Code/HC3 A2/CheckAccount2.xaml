            <ListBoxItem Content="TRANSACTION --------------------------------------------"
                         FontSize="25" FontFamily="Arial"/>
            <ListBoxItem Content="TRANSACTION --------------------------------------------"
                         FontSize="25" FontFamily="Arial"/>
            <ListBoxItem Content="TRANSACTION --------------------------------------------"
