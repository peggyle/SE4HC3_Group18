            <!--
            <ListBoxItem Content="content" Height="20"/>
            <ListBoxItem Content="content" Height="20"/>
            <ListBoxItem Content="This is the end"/>
            -->
        </ListBox>

        <!--
        <Label x:Name="label1" Content="Date" HorizontalAlignment="Left" Height="28" Margin="44,210,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold"/>
        <Label x:Name="label1_Copy" Content="Transaction Description" HorizontalAlignment="Left" Height="28" Margin="152,210,0,0" VerticalAlignment="Top" Width="146" FontWeight="Bold"/>
        <Label x:Name="label1_Copy1" Content="Withdrawals" HorizontalAlignment="Left" Height="28" Margin="344,210,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold"/>
        <Label x:Name="label1_Copy2" Content="Deposits" HorizontalAlignment="Left" Height="28" Margin="477,210,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold"/>
        <Label x:Name="label1_Copy3" Content="Balance" HorizontalAlignment="Left" Height="28" Margin="595,210,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold"/>
        -->


        <TextBlock x:Name="label1" Text="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="55,180,0,0" FontSize="30" FontFamily="Arial" TextDecorations="Underline"/>
        <TextBlock x:Name="label2" Text="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,180,0,0" FontSize="30" FontFamily="Arial" TextDecorations="Underline"/>
        <TextBlock x:Name="label3" Text="Change" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="470,180,0,0" FontSize="30" FontFamily="Arial" TextDecorations="Underline"/>
        <TextBlock x:Name="label4" Text="Balance" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="600,180,0,0" FontSize="30" FontFamily="Arial" TextDecorations="Underline"/>

        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,50"  Width="120" Height="60" Click="button_back_Click" FontSize="25" FontFamily="Arial" PreviewMouseDown="buttonPressed" PreviewMouseUp="buttonReleased">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="okButton" Content="Print" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,50"  Width="120" Height="60" Click="button_print_Click" FontSize="25" FontFamily="Arial" PreviewMouseDown="buttonPressed" PreviewMouseUp="buttonReleased">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Page>
