<Page x:Class="HC3_A2.InsertCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HC3_A2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Button x:Name="insertIcon" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Click="insertCardClick">
            <StackPanel><Image Source="/Resources/Insert card.png"/></StackPanel>
        </Button>

        <Image x:Name="Arrow" Source="/Resources/Arrow up.png" Width="40" Height="75" Margin="300,0,0,0"/>

        <Button x:Name="bankEntryButton" Content="Beep" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 50 50" Width="75" Click="bankEntryClick"/>
        
        <Button x:Name="beepButton" Content="Beep" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 100" Width="75" Click="beep"/>

    </Grid>
</Page>
