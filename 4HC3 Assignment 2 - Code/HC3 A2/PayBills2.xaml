                    0
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="4">
                <Button Background="WhiteSmoke" CommandParameter="NUMPAD." Click="number_click" FontSize="30" FontFamily="Arial" PreviewMouseDown="buttonPressed" PreviewMouseUp="buttonReleased2">
                    .
