        <TextBlock x:Name="bankingLabel" HorizontalAlignment="Right" VerticalAlignment="Top" Text="Banking"  Margin="0,55,15,0" FontSize="20" FontFamily="Arial" FontWeight="Bold" Foreground="White"/>
        <TextBlock x:Name="titleLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Pay Bills"  Margin="15,15,0,0" FontSize="50" FontFamily="Arial" Foreground="White"/>

        <TextBlock x:Name="textLabel" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="93,100,0,0" FontSize="20" FontFamily="Arial" FontWeight="Bold" Text="Paying From: "/>
        <TextBlock x:Name="accountLabel" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="235,100,0,0" FontSize="20" FontFamily="Arial" Text="(Account)"/>
