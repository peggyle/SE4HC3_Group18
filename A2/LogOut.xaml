<Page x:Class="HC3_A2.LogOut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HC3_A2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LogOut">

    <Grid>
        <TextBlock x:Name="thankYouLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Thank you for banking with PErKX."  Margin="66,100,66,0" FontSize="39" FontFamily="Arial" FontWeight="Bold" Width="800" TextAlignment="Center"/>

        <Button x:Name="insertIcon" HorizontalAlignment="Center" VerticalAlignment="Center" Click="insertCardClick">
            <Image Source="/Resources/Insert card (combined).png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
        </Button>
        
        <Image x:Name="Arrow" Source="/Resources/Arrow down.png" Width="40" Height="75" Margin="280,0,0,0"/>
        <TextBlock x:Name="cardReminderLabel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Don't forget your card!"  Margin="0,0,0,100" FontSize="30" FontFamily="Arial" FontWeight="Bold"/>
    </Grid>
</Page>
